set nocompatible

execute pathogen#infect()

filetype on
filetype indent on
filetype plugin on

syntax on
syntax enable

set number
set incsearch
set ignorecase
set hlsearch
set smartindent
set smartcase
set gdefault
set autoindent
set tabstop=2
set shiftwidth=2
set expandtab
set fileencoding=utf-8
set encoding=utf-8
set backspace=indent,eol,start
set guifont=Monaco:h14
nnoremap <F3> :NumbersToggle<CR>
set showmatch
set noswapfile


